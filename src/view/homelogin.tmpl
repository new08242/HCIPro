<section id="login">
    <div class="container" ng-controller="TodoListController as todoList">
      <div class="row">
          <div class="col-xs-12">
              <div class="form-wrap">
                <h1>Log in with your Student ID</h1>
                    <form role="form" action="javascript:;" method="post" id="login-form" autocomplete="off">
                        <div class="form-group">
                            <label for="email" class="sr-only">Email</label>
                            <input ng-model="currentUserId" type="username" name="email" id="username" class="form-control" placeholder="Student ID">
                        </div>
                        <div class="form-group">
                            <label for="key" class="sr-only">Password</label>
                            <input type="password" name="key" id="key" class="form-control" placeholder="Any Password">
                        </div>
                        <input ui-sref="enroll" type="submit" id="btn-login" class="btn btn-custom btn-lg btn-block" value="Log in" ng-click="todoList.Login(currentUserId)">
              </div>
        </div> <!-- /.col-xs-12 -->
      </div> <!-- /.row -->
    </div> <!-- /.container -->
</section>